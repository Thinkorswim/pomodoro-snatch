{
  "manifest_version": 2,
  "name": "Pomodoro Snatch",
  "short_name": "Pomodoro Snatch",
  "version": "1.0.0",
  "description": "Block websites, control your browsing patterns and beat procrastination.",
  "icons": {
    "128": "images/logo5.png",
    "48": "images/logo5.png",
    "16": "images/logo5.png"
  },

  "browser_action":{
    "defualt_icon": "images/logo5.png",
    "default_popup": "popup.html"
  },


  "background": {
    "scripts": ["scripts/controller.js"],
    "persistent": false
  },

  "options_page": "options.html",

  "permissions": [
    "storage",
    "notifications"
  ]
}
